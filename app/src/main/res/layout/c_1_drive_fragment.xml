<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_blue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/linear_layout_1"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true">

        <ToggleButton
            android:id="@+id/toggleButton_byte_1_1"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_1_2"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_1_3"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_1_4"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_1_5"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_1_6"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_1_7"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_1_8"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/id_tv_byte_1_out"
        android:text="@string/default_string_value_bit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/linear_layout_1"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/id_tv_byte_1_in"
        android:text="@string/default_string_value_bit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/linear_layout_1"
        android:layout_alignParentEnd="true"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_layout_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_tv_byte_1_out">

        <ToggleButton
            android:id="@+id/toggleButton_byte_2_1"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_2_2"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_2_3"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_2_4"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_2_5"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_2_6"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_2_7"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleButton_byte_2_8"
            android:textOff="0"
            android:textOn="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/id_tv_byte_2_out"
        android:text="@string/default_string_value_bit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/linear_layout_2"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/id_tv_byte_2_in"
        android:text="@string/default_string_value_bit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/linear_layout_2"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/c1_id_tv_communication_status"
        android:text="@string/default_string_value_char"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>